<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="@dimen/default_list_item_height"
              android:orientation="horizontal">

	<TextView
			android:id="@+id/hour_weather_detail_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="left"
			android:layout_weight="1"
			android:padding="@dimen/default_item_padding"
			android:textSize="@dimen/item_text_size"
			tools:text="00:00"/>

	<TextView
			android:id="@+id/temp_weather_detail_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="@dimen/default_item_padding"
			android:textSize="@dimen/item_text_size"/>

	<ImageView
			android:id="@+id/icon_weather_detail_image"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:contentDescription="@string/weather_icon"
			android:adjustViewBounds="true"/>

	<TextView
			android:id="@+id/humid_weather_detail_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="@dimen/default_item_padding"
			android:textSize="@dimen/item_text_size"
			android:layout_gravity="center_vertical"
			android:gravity="right"
			tools:text="88%"
			/>
</LinearLayout>