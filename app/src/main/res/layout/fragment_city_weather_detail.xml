<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:orientation="vertical">

	<ProgressBar
			android:id="@+id/detail_progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"/>

	<TextView
			android:id="@+id/detail_city_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:textSize="@dimen/text_title_size"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"/>

	<TextView
			android:id="@+id/no_detail_info_available"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/no_info_available"
			android:layout_below="@+id/detail_city_text"
			android:layout_centerHorizontal="true"
			android:visibility="gone"/>

	<TextView
			android:id="@+id/detail_city_temperature"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:textSize="@dimen/text_title_size"
			android:visibility="gone"
			android:layout_below="@+id/detail_city_text"
			android:layout_centerHorizontal="true"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:visibility="gone"
			android:layout_below="@+id/detail_city_temperature"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:id="@+id/linearLayout">

		<TextView
				android:id="@+id/detail_weather_text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:textSize="@dimen/text_title_size"/>

		<TextView
				android:id="@+id/detail_temp_text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="1"
				android:textSize="@dimen/text_title_size"/>
	</LinearLayout>

	<android.support.v7.widget.RecyclerView
			android:id="@+id/weather_detail_recycler"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_below="@+id/linearLayout"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
</RelativeLayout>